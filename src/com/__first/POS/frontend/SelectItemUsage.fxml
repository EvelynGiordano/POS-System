<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane prefHeight="500.0" prefWidth="450.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1">
   <top>
      <Label text="Select which inventory items this menu item will use" BorderPane.alignment="CENTER">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </top>
   <center>
      <ScrollPane fitToWidth="true" focusTraversable="false" BorderPane.alignment="CENTER">
         <content>
            <VBox fx:id="inventoryVB" spacing="5.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </center>
   <bottom>
      <Button mnemonicParsing="false" onAction="#finishMenuItem" text="Finish" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
</BorderPane>
